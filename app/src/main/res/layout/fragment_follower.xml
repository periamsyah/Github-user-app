<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_container"
    android:padding="4dp"
    tools:context=".view.fragment.FollowerFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_follower_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/fragment_follower_progressBar_layout"
        layout="@layout/progress_bar" />

    <include
        android:id="@+id/fragment_follower_warning_layout"
        layout="@layout/error_warning" />

</FrameLayout>